<form>
	<fields name="passwordless"
			addfieldprefix="Joomla\Plugin\System\Passwordless\Field">
		<fieldset name="passwordless"
			label="PLG_SYSTEM_PASSWORDLESS_HEADER"
		>
			<field
				name="passwordless"
				type="passwordless"
				label="PLG_SYSTEM_PASSWORDLESS_FIELD_LABEL"
				description="PLG_SYSTEM_PASSWORDLESS_FIELD_DESC"
				required="false"
				readonly="false"
				default=""
			/>

			<field
				name="noPassword"
				type="list"
				label="PLG_SYSTEM_PASSWORDLESS_FIELD_NOPASSWORD_LABEL"
				description="PLG_SYSTEM_PASSWORDLESS_FIELD_NOPASSWORD_DESC"
				default="0"
				required="false"
				>
				<option value="0">PLG_SYSTEM_PASSWORDLESS_FIELD_NOPASSWORD_OPT_ALLOW</option>
				<option value="1">PLG_SYSTEM_PASSWORDLESS_FIELD_NOPASSWORD_OPT_DISALLOW</option>
				<option value="2">PLG_SYSTEM_PASSWORDLESS_FIELD_NOPASSWORD_OPT_CONDITIONAL</option>
			</field>
		</fieldset>
	</fields>
</form>